{
  "name": "neoman",
  "version": "0.1.0",
  "repository": "https://github.com/cdibbs/neoman",
  "description": "Neoman templating engine.",
  "main": "dist/index.js",
  "bin": {
    "neoman": "./bin/neoman"
  },
  "scripts": {
    "# pretest": "tsc -p tsconfig-mocha.json",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\",\\\"project\":\\\"tsconfig-mocha.json\\\"} mocha --recursive --compilers ts:ts-node/register --compilerOptions --bail src/lib",
    "cover": "nyc npm test",
    "build": "npm-run-all tsc copystatic",
    "tsc": "tsc",
    "copystatic": "copyfiles -u 2 src/browser-prompt/**/* dist/browser-prompt"
  },
  "nyc": {
    "include": [
      "src/lib/*.ts",
      "src/lib/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json", "html"
    ],
    "all": true
  },
  "author": "Chris Dibbern",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/fs-extra": "^3.0.3",
    "@types/glob": "^5.0.30",
    "@types/launchpad": "^0.6.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.28",
    "@types/underscore": "^1.8.1",
    "@types/ws": "^3.0.0",
    "body-parser": "^1.17.2",
    "chai": "^4.0.2",
    "codecov": "^2.2.0",
    "commandpost": "^1.1.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "fs-extra": "^3.0.1",
    "glob": "^7.1.2",
    "inversify": "^4.1.1",
    "launchpad": "^0.7.0",
    "minimatch": "^3.0.4",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.3",
    "optimist": "^0.6.1",
    "reflect-metadata": "^0.1.10",
    "requireg": "^0.1.6",
    "rxjs": "^5.4.2",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1",
    "underscore": "^1.8.3",
    "user-settings": "^0.1.5",
    "ws": "^3.0.0"
  }
}
