{
    "#": [
        "Contains a basic, scaffolded test as used by the Neoman project, itself."
    ],
    "name": "*.test",
    "identity": "test",
    "scope": "io.neoman",
    "root": "src",

    "input": {
        "use": "argv",
        "define": {
            "className": {
                "options": { "argType": "positional", "position": 0 },
                "prompt": "What's the name of the class to test?",
                "default": "MyClass",
                "validate": [
                    {
                        "match": "/[A-Za-z_][A-Za-z_0-9]*/",
                        "fail": "Class name must be formatted like a valid TypeScript class name."
                    }
                ]
            },
            "classFileName": {
                "deriveFrom": "className",
                "transform": { 
                    "match": "/([a-z])([A-Z])/",
                    "replace": "$1-$2",
                    "modify": {
                        "$1": "toUpperCase",
                        "$2": "toLowerCase"
                    }
                }
            }
        }
    },
    "files": [ "name.test.ts" ],
    "transform": [
        "/ClassName/{{className}}/g"
    ],
    "pathTransform": [
        "/name/{{classFileName}}/g"
    ]
}